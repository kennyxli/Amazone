<!DOCTYPE html>
<html>
  <head>
    <title>Amazone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
      <script type="text/javascript">
        window.brentURL = "<%= image_url('amazone.png') %>";
      </script>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "name": "<%= current_user.name %>",
          "email": "<%= current_user.email %>"
        };
      </script>
    <%end%>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
